function increaseScore(num) {
    if (num < 20) {
        return num + 25
    } else if (num < 40) {
        return num + 20
    } else if (num < 60) {
        return num + 15
    } else if (num < 80) {
        return num + 10
    } else if (num < 100) {
        return num + 5
    }
}

