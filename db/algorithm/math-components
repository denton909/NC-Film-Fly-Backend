function increaseScoreScale(num) {
    if (num < 20) {
        return num + 25
    } else if (num < 40) {
        return num + 20
    } else if (num < 60) {
        return num + 15
    } else if (num < 80) {
        return num + 10
    } else if (num < 100) {
        return num + 5
    }
}

function increaseScore(num) {
    const increase = increaseScoreScale(num)
    if (increase > 100) {
        return 100
    } else {return increase}
}


function decreaseScoreScale(num) {
  if (num > 80) {
      return num - 25
  } else if (num > 60) {
      return num - 20
  } else if (num > 40) {
      return num - 15
  } else if (num > 20) {
      return num - 10
  } else if (num > 0) {
      return num - 5
  }
}

function decreaseScore(num) {
  const decrease = decreaseScoreScale(num)
  if (decrease < 0) {
      return 0
  } else {return decrease}
}

function decreaseScoreByHalf(num) {
    if (num > 87) {
        return num - 12
    } else {
        return num = 75
    }
  }

module.exports = {increaseScore, decreaseScore, decreaseScoreByHalf}